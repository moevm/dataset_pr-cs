CC = gcc
CFLAGS = -Wall -std=c99

menu: menu.c index_first_negative.c index_last_negative.c sum_between_negative.c sum_before_and_after_negative.c get_index.c
	$(CC) $(CFLAGS) -o menu menu.c index_first_negative.c index_last_negative.c sum_between_negative.c sum_before_and_after_negative.c get_index.c

clean:
	rm -f menu

